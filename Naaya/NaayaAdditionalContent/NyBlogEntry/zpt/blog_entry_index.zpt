<span tal:replace="structure here/standard_html_header" />

<link rel="stylesheet" type="text/css" tal:attributes="href string:${here/absolute_url}/blog_css" />

<tal:block define="username python:request.AUTHENTICATED_USER.getUserName()" >

<tal:block condition="python:here.releasedate.lessThan(here.utGetTodayDate()) or username != 'Anonymous User'">
	<tal:block tal:condition="python:here.checkPermissionEditObject()">
	<div id="admin_this_folder">
		<a tal:attributes="href string:${here/absolute_url}/edit_html"><span i18n:translate="">Edit entry</span></a>
	</div>
	</tal:block>

	<div class="entry-container">
		<h1>
			<a title="Read more..." tal:attributes="href string:${here/absolute_url}/index_html" tal:content="here/title_or_id">title</a>
		</h1>
		<div class="entry-metadata">
			<span class="entry-comments"><strong><span i18n:translate="">Comments</span>:</strong> <a href="#comments" tal:content="here/count_comments" /></span>
			<span tal:replace="python:here.utShowDateTime(here.releasedate)" class="postdate" /> - <a tal:define="author python:here.getAuthenticationTool().getUserFullNameByID(here.contributor); parent here/getParentNode" 
					tal:attributes="href string:${parent/absolute_url}?author=${here/contributor}" tal:content="author" class="postauthor" /> 
				
			<br />
			<span class="entry-tags" tal:condition="here/keywords"><strong><span i18n:translate="">Tags</span>:</strong> <tal:block repeat="k here/keywords"><a tal:define="parent here/getParentNode" tal:attributes="href string:${parent/absolute_url}?tag=${k}" tal:content="k" /> </tal:block></span><br />
		</div>
		<div class="entry-content" tal:content="structure here/content" />
	</div>

	<a name="comments"></a>
	<span tal:replace="structure here/blogcomments_box" />
</tal:block>

	<span tal:condition="python:here.releasedate.greaterThanEqualTo(here.utGetTodayDate()) and username == 'Anonymous User'" i18n:translate="">[unpublished]</span>
</tal:block>

<span tal:replace="structure here/standard_html_footer" />