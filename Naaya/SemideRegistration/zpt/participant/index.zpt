<tal:block replace="structure here/standard_html_header"/>
<link rel="stylesheet" type="text/css" media="print" href="/misc_/SemideRegistration/print.css" />

<h1 i18n:translate="">Contribution of local and regional authorities to the Union for the
						Mediterranean in the water sector</h1>
<h2 i18n:translate="">Lyon, 23-24 November 2009</h2>

<tal:block define="global entitled python:here.isEntitled(request);" />

<tal:block condition="not:entitled">
	<tal:block condition="python:request.form.has_key('authenticate')">
		<div class="message-error">
			Wrong registration number - participant name combination. Please try again.
		</div>
	</tal:block>

	<form action="" name="frmLogin" method="post">
		<table class="datatable">
			<tr>
				<th i18n:translate="">Registration number</th>
				<td><input type="text" name="registration_no" value="" /></td>
			</tr>
			<tr>
				<th i18n:translate="">Participant's family name</th>
				<td><input type="text" name="last_name" value="" /></td>
			</tr>
		</table>
		<input type="submit" name="authenticate" id="authenticate" value="View profile" i18n:attributes="value" />
	</form>
</tal:block>

<tal:block condition="entitled">
	<div id="admin_this_folder">
		<a tal:attributes="href string:${here/absolute_url}/edit_html">Edit registration</a>
		<a tal:attributes="href string:javascript:print()">Print registration</a>
	</div>

	<table class="datatable">
	<tr>
		<th i18n:translate="">Registration number</th>
		<td tal:content="here/id" />
	</tr>
	<tr>
		<th i18n:translate="">Name</th>
		<td tal:content="here/last_name" />
	</tr>
	<tr>
		<th i18n:translate="">First name</th>
		<td tal:content="here/first_name" />
	</tr>
	<tr tal:condition="not:here/is_journalist">
		<th i18n:translate="">Country</th>
		<td tal:content="here/country" />
	</tr>
	<tr tal:condition="not:here/is_journalist">
		<th i18n:translate="">Organisation</th>
		<td tal:content="here/organisation" />
	</tr>
	<tr tal:condition="not:here/is_journalist">
		<th i18n:translate="">Official title</th>
		<td tal:content="here/official_title" />
	</tr>
	<tr tal:condition="here/is_journalist">
		<th i18n:translate="">Media name</th>
		<td tal:content="here/media_name" />
	</tr>
	<tr tal:condition="here/is_journalist">
		<th i18n:translate="">Type of media</th>
		<td tal:content="here/media_type" />
	</tr>
	<tr tal:condition="here/is_journalist">
		<th i18n:translate="">Description of equipment used</th>
		<td tal:content="here/media_description" />
	</tr>
	<tr tal:condition="here/is_journalist">
		<th i18n:translate="">Your position</th>
		<td tal:content="here/media_position" />
	</tr>
	<tr>
		<th i18n:translate="">Passport number</th>
		<td tal:content="here/passport_no" />
	</tr>
	<tr>
		<th i18n:translate="">Expiry date of the passport</th>
		<td tal:content="here/passport_expire" />
	</tr>
	<tr>
		<th i18n:translate="">Phone number</th>
		<td tal:content="here/phone_number" />
	</tr>
	<tr>
		<th i18n:translate="">Email</th>
		<td tal:content="here/email" />
	</tr>
	<tr tal:condition="here/is_journalist">
		<th i18n:translate="">Mobile phone</th>
		<td tal:content="here/mobile_number" />
	</tr>
	<tr>
		<th i18n:translate="">Fax number</th>
		<td tal:content="here/fax_number" />
	</tr>
	<tr>
		<th i18n:translate="">Date of arrival</th>
		<td tal:content="here/arrival_date" />
	</tr>
	<tr>
		<th i18n:translate="">Arriving from</th>
		<td tal:content="here/arrival_from" />
	</tr>
	<tr>
		<th i18n:translate="">Flight number</th>
		<td tal:content="here/arrival_flight" />
	</tr>
	<tr>
		<th i18n:translate="">Time of arrival</th>
		<td tal:content="here/arrival_time" />
	</tr>
	<tr>
		<th i18n:translate="">Date of departure</th>
		<td tal:content="here/departure_date" />
	</tr>
	<tr>
		<th i18n:translate="">Flight number</th>
		<td tal:content="here/departure_flight" />
	</tr>
	<tr>
		<th i18n:translate="">Time of departure</th>
		<td tal:content="here/departure_time" />
	</tr>
	<tr>
		<th i18n:translate="">Registration date</th>
		<td tal:content="python:here.formatDate(here.registration_date)" />
	</tr>
	<tr tal:condition="not:here/is_journalist">
		<th i18n:translate="">Hotel reservation</th>
		<td>
			<span tal:condition="python:here.hotel_reservation=='1'">
				I am part of one of the following delegations: (2 persons for each delegation): Albania, Algeria, Bosnia-Herzegovina, Croatia, Montenegro,
				Egypt, Euro-Mediterranean Parliamentary Assembly, Israel, League of Arab States, Lebanon, Libya, Mauritania, Morocco, Palestine, Syria, Tunisia, Turkey.
				My accommodation is covered by the French Government.
			</span>
			<span tal:condition="python:here.hotel_reservation=='2'">
				I pay my own accommodation. So please book your hotel room, click here to get hotels contacts and special rates.
			</span>
		</td>
	</tr>
	</table>
</tal:block>
<tal:block replace="structure here/standard_html_footer"/>