<dtml-var standard_html_header>

<dtml-let hasRoleHelpDeskAdministrator="isHelpDeskAdministrator()">

<dtml-var style_html>

<p>

<dtml-var "aq_parent.menu_html(None, _, pagetab=-1)">
<dtml-var "menu_html(None, _, pagetab=-1)">

<dtml-comment>
    ONLY HELPDESK ADMINISTRATORS CAN ACCESS PRIVATE ISSUES AND HELPDESK CONSULTANTS
</dtml-comment>
<p>
<table border="0" cellspacing="2" cellpadding="2" width="100%">
    <tr><td class="label" nowrap="true">Ticket Number</td><td><dtml-var id html_quote></td></tr>
    <tr><td class="label">Subject/Title</td><td><b><dtml-var subject html_quote null=-></b></td></tr>
    <tr><td class="label" width="15%" nowrap="true" valign="top">Description</td><td class="celltextarea"><dtml-var "EncodeTextareaContent(description)" null=-></td></tr>
    <dtml-if "user_name!=''">
    <tr>
        <td class="label" nowrap="true">Author</td>
        <td>
            <dtml-if "user_name!=''"><dtml-var user_name html_quote null=->&nbsp;</dtml-if>
        </td>
    </tr>
    </dtml-if>
</table>
</p>
<p>
<table border="0" cellspacing="2" cellpadding="2" width="100%">
    <tr>
        <td class="note">Use this form to send an email to the issue's author. If you want to keep track of it, you can select to also create a comment in this issue.</td>
    </tr>
</table>
</p>
<form name="frmfeedback" action="manageFeedback" method="post">
<table border="0" cellspacing="2" cellpadding="2" width="100%">
    <tr><td class="label">Date</td><td><dtml-var "CurrentDate()"></td></tr>
    <tr><td class="label">From</td><td><input type="text" name="from" size="20" value="<dtml-var "getUserName(getAuthenticatedUser())" html_quote>"></td></tr>
    <tr><td class="label">Content type</td><td><input type="radio" name="content_type" value="1" checked>Plain text <input type="radio" name="content_type" value="0">HTML</td></tr>
    <tr><td class="label" valign="top">Content</td><td><textarea name="content" rows="10" cols="70"></textarea></td></tr>
    <tr><td class="label">Create comment</td><td><input type="checkbox" name="comment" value="on"></td></tr>
    <tr><td>&nbsp;</td><td><input type="submit" name="add" value="Send feedback"></td></tr>
</table>
<input type="hidden" name="httpreferer" value="<dtml-var "REQUEST['HTTP_REFERER']" html_quote>">
</form>
<script>try{document.frmadd.username.focus();}catch(e){}</script>

<dtml-var "info_login_html(None, _)">

</p>

</dtml-let>

<dtml-var standard_html_footer>
