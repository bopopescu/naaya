<metal:block i18n:domain="portal_translations" metal:use-macro="here/standard_template_macro">

<metal:block metal:fill-slot="title">
		<title tal:content="string:${here/title} | ${here/site_title}" />
</metal:block>

<metal:block metal:fill-slot="head">
</metal:block>

<metal:block fill-slot="body">
	<div id="center_content">
		<h1 i18n:translate="">Search</h1>
		<p i18n:translate="">Please enter your search criteria.</p>
		<table class="datatable">
			<thead>
				<tr>
					<td i18n:translate="">Indicator</td>
					<td i18n:translate="">Value</td>
					<td i18n:translate="">Unit</td>
					<td i18n:translate="">Source</td>
				</tr>
			</thead>
			<tbody>
				<tr tal:define="record python:here.query('get_table_data', var='SOC1', src='JMP', cnt='TN')" tal:condition="record">
					<td i18n:translate="">Population</td>
					<td tal:content="record/val" />
					<td tal:content="record/var_unit" />
					<td>
						<span tal:replace="record/src_label" />&nbsp;
						(<span tal:replace="record/val_year" />)
					</td>
				</tr>
				<tr tal:define="record python:here.query('get_table_data', var='PHY1', src='medstat', cnt='TN')" tal:condition="record">
					<td i18n:translate="">Land area</td>
					<td tal:content="record/val" />
					<td tal:content="record/var_unit" />
					<td>
						<span tal:replace="record/src_label" />&nbsp;
						(<span tal:replace="record/val_year" />)
					</td>
				</tr>
				<tr tal:define="record python:here.query('get_table_data', var='U24', src='aquastat', cnt='TN')" tal:condition="record">
					<td i18n:translate="">Water withdrawal for agriculture</td>
					<td tal:content="record/val" />
					<td tal:content="record/var_unit" />
					<td>
						<span tal:replace="record/src_label" />&nbsp;
						(<span tal:replace="record/val_year" />)
					</td>
				</tr>
				<tr tal:define="record python:here.query('get_table_data', var='R10', src='aquastat', cnt='TN')" tal:condition="record">
					<td i18n:translate="">Water per capita</td>
					<td tal:content="record/val" />
					<td tal:content="record/var_unit" />
					<td>
						<span tal:replace="record/src_label" />&nbsp;
						(<span tal:replace="record/val_year" />)
					</td>
				</tr>
				<tr tal:define="record python:here.query('get_table_data', var='SUP1', src='JMP', cnt='TN')" tal:condition="record">
					<td i18n:translate="">Access to improved water source</td>
					<td tal:content="record/val" />
					<td tal:content="record/var_unit" />
					<td>
						<span tal:replace="record/src_label" />&nbsp;
						(<span tal:replace="record/val_year" />)
					</td>
				</tr>
				<tr tal:define="record python:here.query('get_table_data', var='SAN1', src='JMP', cnt='TN')" tal:condition="record">
					<td i18n:translate="">Access to sanitation</td>
					<td tal:content="record/val" />
					<td tal:content="record/var_unit" />
					<td>
						<span tal:replace="record/src_label" />&nbsp;
						(<span tal:replace="record/val_year" />)
					</td>
				</tr>
			</tbody>
		</table>
	</div>
	<div id="charts">
		<div id="population-chart">
			<h2 i18n:translate="">Population</h2>
			<img tal:attributes="src string:${here/absolute_url}/get_chart?var=SOC1&src=JMP&cnt=TN&width=600&height=250&refresh=1" alt="population chart" i18n:attributes="alt" />
		</div>
		<div id="agriculture-chart">
			<h2 i18n:translate="">Water withdrawal for agriculture</h2>
			<img tal:attributes="src string:${here/absolute_url}/get_chart?var=U24&src=aquastat&cnt=TN&width=600&height=250&refresh=1" alt="agriculture chart" i18n:attributes="alt" />
		</div>
	</div>
</metal:block>

</metal:block>
