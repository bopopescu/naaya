<tal:block tal:replace="structure here/standard_html_header"/>
<span metal:use-macro="here/calendar_template/macros/calendar_page">


<tal:block metal:fill-slot="page_body">
	<tal:block define="cday python:request.get('cday', '').split('/')[0];
					   cmonth python:request.get('cday', '').split('/')[1];
					   cyear python:request.get('cday', '').split('/')[2];">
<div id="middle_port" style='margin-right:0;'>

		<h3 id="Event-Title">
			<span tal:omit-tag="" i18n:translate="">Day Events for</span>&nbsp;<span tal:replace="python:cday+' '+here.getMonthName(cmonth)+' '+cyear"/>
		</h3>

		<table id="Event-Container" cellspacing="0" tal:define="daily_events python:here.getDailyEvents(cmonth, cyear);">
			<tr condition="python:len(cday)!=0">
				<th width="2%"></th>
				<th width="60%" i18n:translate="">Object's name</th>
				<th i18n:translate="">Date</th>
			</tr>
			<tr tal:condition="python:len(cday)==0">
				<td colspan="3" id="Event-None" i18n:translate="">No events this day</td>
			</tr>
			<tr tal:condition="python:len(cday)!=0" tal:repeat="obj python:daily_events[cday]">
				<td><img tal:attributes="src python:obj[0].icon; title python:obj[0].meta_type; alt python:obj[0].meta_type;" /></td>
				<td><a tal:attributes="href python:obj[0].absolute_url(0); title python:obj[0].title_or_id();" tal:content="python:obj[0].title_or_id()"></a></td>
				<td tal:content="python:obj[1]"></td>
			</tr>
		</table>
</div>
	</tal:block>
</tal:block>


</span>
<tal:block tal:replace="structure here/standard_html_footer"/>
