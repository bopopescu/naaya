<dtml-let record_id="REQUEST.get('id', '')" records="getListIssueSendType()">

<form name="frm" method="post" action="manageIssueSendType">
<table border="0" cellspacing="2" cellpadding="2" width="100%">
    <tr>
        <td width="1%" class="cellheader">&nbsp;</td>
        <td class="cellheader"><b>Title</b></td>
        <td class="cellheader"><b>Description</b></td>
        <td class="cellheader">&nbsp;</td>
    </tr>
    <dtml-in records>
        <dtml-if sequence-odd>
            <dtml-call "REQUEST.set('cellclass', 'cellodd')">
        <dtml-else>
            <dtml-call "REQUEST.set('cellclass', 'celleven')">
        </dtml-if>
        <dtml-if "record_id == id">
        <tr>
            <td class="<dtml-var cellclass>" width="1%"><input type="hidden" name="id" value="<dtml-var id html_quote>">&nbsp;</td>
            <td class="<dtml-var cellclass>"><input type="text" name="title" size="30" value="<dtml-var title html_quote>"></td>
            <td class="<dtml-var cellclass>"><input type="text" name="description" size="50" value="<dtml-var description html_quote>"></td>
            <td class="<dtml-var cellclass>"><input type="submit" name="update" value="Update"></td>
        </tr>
        <dtml-else>
        <tr>
            <td class="<dtml-var cellclass>" width="1%"><input type="checkbox" name="ids" value="<dtml-var id html_quote>"></td>
            <td class="<dtml-var cellclass>"><a class="itemlink" href="admin_html?pagetab=4&amp;id=<dtml-var id url_quote>"><dtml-var title html_quote null=-></a></td>
            <td class="<dtml-var cellclass>"><dtml-var description html_quote null=-></td>
            <td class="<dtml-var cellclass>">&nbsp;</td>
        </tr>
        </dtml-if>
    </dtml-in>
    <dtml-if "record_id==''">
    <tr>
        <td class="cell" width="1%">&nbsp;</td>
        <td class="cell"><input type="text" name="title" size="30" value=""></td>
        <td class="cell"><input type="text" name="description" size="50" value=""></td>
        <td class="cell"><input type="submit" name="add" value="Add"></td>
    </tr>
    </dtml-if>
    <tr>
        <td class="cell" width="1%">&nbsp;</td>
        <td class="cell" colspan="3"><input type="submit" name="delete" value="Delete"></td>
    </tr>
</table>
</form>
<script>try{document.frm.title.focus();}catch(e){}</script>

</dtml-let>
