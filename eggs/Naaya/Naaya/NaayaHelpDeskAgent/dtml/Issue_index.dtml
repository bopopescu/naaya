<dtml-var standard_html_header>

<dtml-let hasRoleHelpDeskAdministrator="isHelpDeskAdministrator()">

<dtml-var style_html>

<p>

<dtml-var "aq_parent.menu_html(None, _, pagetab=-1)">

<dtml-comment>
    ONLY HELPDESK ADMINISTRATORS CAN ACCESS PRIVATE ISSUES AND HELPDESK RESOLVER
</dtml-comment>
<dtml-if "consultant==getAuthenticatedUser() or hasRoleHelpDeskAdministrator or security==getIssuePublic()">
    <dtml-var "menu_html(None, _, pagetab=0)">
    <form name="frm">
    <table border="0" cellspacing="2" cellpadding="2" width="100%">
        <tr><td nowrap="true" colspan="2"><span class="label">Last modified:</span><dtml-var "FormatDate(date_modify)" html_quote>,&nbsp;<span class="label">Opened:</span><dtml-var "FormatDate(date_open)" html_quote>,&nbsp;<span class="label">Ticket Number:</span><dtml-var id html_quote></td></tr>
        <tr><td class="label">Subject/Title</td><td><b><dtml-var subject html_quote null=-></b></td></tr>
        <tr><td class="label" width="15%" nowrap="true" valign="top">Description</td><td class="celltextarea"><dtml-var "EncodeTextareaContent(description)" null=-></td></tr>
        <tr><td colspan="2"><span class="label">Status:</span><dtml-var "getIssueStatusTitle(status)" html_quote null=->,&nbsp;<span class="label">Priority:</span><dtml-var "getIssuePriorityTitle(priority)" html_quote null=->,&nbsp;<span class="label">Category:</span><dtml-var "getIssueCategoryTitle(category)" html_quote null=-></td></tr>
        <tr><td class="label" nowrap="true">Assigned to</td><td><dtml-var "getUserName(consultant)" html_quote null=-></td></tr>
        <dtml-if hasRoleHelpDeskAdministrator>
        <tr><td class="label" nowrap="true">Security</td><td><dtml-var security html_quote null=-></td></tr>
        </dtml-if>
        <dtml-if "((user_name!='') or (user_phone!=''))">
        <tr>
            <td class="label" nowrap="true">User information</td>
            <td>
                <dtml-if "user_name!=''"><dtml-var user_name html_quote null=->&nbsp;</dtml-if>
                <dtml-if "user_phone!=''"><dtml-var user_phone html_quote null=-></dtml-if>
            </td>
        </tr>
        </dtml-if>
        <tr><td class="label" nowrap="true">Link</td><td><dtml-if "link!=''"><a class="urllink" href="<dtml-var link html_quote>" target="_blank"><dtml-var link html_quote></a><dtml-else>-</dtml-if></td></tr>
        <tr>
            <td class="label" nowrap="true">Attachment</td>
            <td>
                <dtml-let res="getAttachmentForIssue()" attobj="res[0]" attFileName="res[1]">
                    <dtml-if "attobj != None">
                        <a href="<dtml-var "attobj.absolute_url(0)">" target="_blank"><dtml-var attFileName html_quote></a>
                    <dtml-else>
                        -
                    </dtml-if>
                </dtml-let>
            </td>
        </tr>
        <tr><td colspan="2"><hr noshade size="1"></td></tr>
        <tr><td colspan="2">&nbsp;</td></tr>
        <tr><td colspan="2"><b>Comments</b></td></tr>
        <tr>
            <td colspan="2">
                <dtml-in "getListIssueComment()" sort=date>
                <table border="0" cellspacing="0" cellpadding="2" width="100%">
                    <tr>
                        <td class="cellheader" width="15%" nowrap="true"><b>Date:</b> <dtml-var "FormatDate(date)"></td>
                        <td class="cellheader" width="15%" nowrap="true"><b>User:</b> <dtml-var username html_quote null=-></td>
                        <td class="cellheader" width="10%"><b>Attachment:</b> 
                            <dtml-let res="getAttachmentForComment(id)" attobj="res[0]" attFileName="res[1]">
                                <dtml-if "attobj != None">
                                    <a href="<dtml-var "attobj.absolute_url(0)">" target="_blank"><dtml-var attFileName html_quote></a>
                                <dtml-else>
                                    -
                                </dtml-if>
                            </dtml-let>
                        </td>
                    </tr>
                    <tr><td class="celltextarea" colspan="3"><span class="celltextarea"><dtml-if content_type><dtml-var "EncodeTextareaContent(content)" null=-><dtml-else><dtml-var content></dtml-if></span></td></tr>
                </table>
                <br><br>
                </dtml-in>
            </td>
        </tr>
    </table>
    </form>
<dtml-else>
    <br>
    <center>
    <span class="alert">You don't have access to this issue.</span>
    </center>
</dtml-if>

</p>

</dtml-let>

<dtml-var "footer_html(None, _)">

<dtml-var standard_html_footer>
