<dtml-var manage_page_header>
<dtml-var "manage_form_title(this(), _, form_title='Add HelpDesk-Agent')">

<form name="frm" action="manage_addHelpDesk" method="post">
<table border="0" cellspacing="2" cellpadding="2" width="100%">
    <tr><td>Id:</td><td><input type="text" name="id" size="30" value="HelpDesk"></td></tr>
    <tr><td>Title:</td><td><input type="text" name="title" size="30" value="HelpDesk-Agent"></td></tr>
    <tr><td colspan="2">&nbsp;</td></tr>
    <tr>
        <td>User Folder:</td>
        <td>
            <select name="user_folder">
                <dtml-in "superValues(['User Folder', 'LDAPUserFolder', 'Naaya User Folder'])" reverse>
                    <option value="<dtml-var "absolute_url(1)" html_quote>"><dtml-var meta_type html_quote>&nbsp;-&nbsp;<dtml-var "absolute_url(1)" html_quote></option>
                </dtml-in>
            </select>
        </td>
    </tr>
    <tr><td colspan="2">&nbsp;</td></tr>
    <tr><td>Mail server name:</td><td><input type="text" name="mail_server_name" size="50" value="localhost"></td></tr>
    <tr><td>Mail server port:</td><td><input type="text" name="mail_server_port" size="3" value="25"></td></tr>
    <tr><td class="cell">Notify users when:</td><td><input type="checkbox" name="notify_add" value="1" checked> adding issues</td></tr>
    <tr><td class="cell">&nbsp;</td><td><input type="checkbox" name="notify_modify" value="1" checked> modifying issues</td></tr>
    <tr><td>From address:</td><td><input type="text" name="mail_from_address" size="50" value="IssueTracker@localhost"></td></tr>
    <tr><td>Add Issue Email Subject:</td><td><input type="text" name="add_issue_email_subject" size="50" value="HelpDesk Agent: new issue posted"></td></tr>
    <tr><td>Update Issue Email Subject:</td><td><input type="text" name="update_issue_email_subject" size="50" value="HelpDesk Agent: issue modification"></td></tr>
    <tr><td>Delete Issue Email Subject:</td><td><input type="text" name="delete_issue_email_subject" size="50" value="HelpDesk Agent: issue deleted"></td></tr>
    <tr><td>Add Issue Comment Email Subject:</td><td><input type="text" name="add_issue_comment_email_subject" size="50" value="HelpDesk Agent: new comment to issue posted"></td></tr>
    <tr><td>Update Issue Comment Email Subject:</td><td><input type="text" name="update_issue_comment_email_subject" size="50" value="HelpDesk Agent: comment modification"></td></tr>
    <tr><td>Delete Issue Comment Email Subject:</td><td><input type="text" name="delete_issue_comment_email_subject" size="50" value="HelpDesk Agent: comment deleted"></td></tr>
    <tr><td colspan="2">&nbsp;</td></tr>
    <tr><td>Issue ticket length:</td><td><input type="text" name="issue_ticket_length" size="3" value="15"></td></tr>
    <tr>
        <td>Default Issue confidentiality:</td>
        <td>
            <select name="security">
                <option value="private">private</option>
                <option value="public">public</option>
            </select>
        </td>
    </tr>
    <tr>
        <td>Priority set by</td>
        <td><input type="radio" name="default_priority" value="1" checked>manager <input type="radio" name="default_priority" value="0">user</td>
    </tr>
    <tr><td colspan="2">&nbsp;</td></tr>
    <tr><td>&nbsp;</td><td><input type="submit" name="addHelpDesk" value="  Add  "></td></tr>
</table>
</form>

<dtml-var manage_page_footer>
