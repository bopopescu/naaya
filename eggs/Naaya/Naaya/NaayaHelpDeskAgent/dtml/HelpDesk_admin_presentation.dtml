<form name="frm" method="post" action="manageHelpDeskPresentation">
<table border="0" cellspacing="2" cellpadding="2" width="100%">
    <tr>
        <td class="cell" width="20%" nowrap="true">Date format:</td>
        <td>
            <select name="date_format">
                <dtml-in "getDateFormatsList()" sort>
                    <option value="<dtml-var sequence-item html_quote>" <dtml-if "date_format==_['sequence-item']">selected</dtml-if>><dtml-var "getDateFormat(_['sequence-item'])" html_quote></option>
                </dtml-in>
            </select>
        </td>
    <tr>
        <td class="cell" nowrap="true">Show time:</td>
        <td>
            <input type="checkbox" name="show_time" value="on" <dtml-if show_time>checked</dtml-if>>
        </td>
    </tr>
    </tr>
    <tr>
        <td class="cell">Style/Css:</td>
        <td>
            <select name="css_style" nowrap="true">
                <dtml-in "getCssStylesList()" sort>
                    <option value="<dtml-var sequence-item html_quote>" <dtml-if "css_style==_['sequence-item']">selected</dtml-if>><dtml-var "getCssStyle(_['sequence-item'])" html_quote></option>
                </dtml-in>
            </select>
        </td>
    </tr>
    <tr>
        <td class="cell">Number of issues per page:</td>
        <td>
            <input type="text" name="issues_perpage" value="<dtml-var issues_perpage>" size="3">
        </td>
    </tr>
    <tr><td class="cell">&nbsp;</td><td><input type="submit" name="update" value="Save changes"></td></tr>
</table>
</form>
